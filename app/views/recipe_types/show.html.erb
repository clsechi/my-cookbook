<div class="container">
	<div class="row">
		<%= render partial: "/partials/type_and_cuisine" %>
		<div class="col-md-10">
			<h1><%= @recipe_type.name %></h1>

			<% if !@recipes.blank? %>

			<% @recipes.each do |recipe| %>

				<%= render recipe %>

			<% end %>

			<% else %>

			<h3>Nenhuma receita encontrada para este tipo de receitas</h3>

			<% end %>
		</div>
	</div>
</div>