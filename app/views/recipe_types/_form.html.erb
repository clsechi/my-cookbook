<div class="container padd"> 

  <% if @recipe_type.errors.any? %>
  <div >
    <h4 class="alert alert-danger"><%= @recipe_type.errors.full_messages %></h4>
    <h4 class="alert alert-danger">VocÃª deve informar o nome do tipo de receita</h4>
  </div>
  <% end %>

  <!-- Default Heading -->
  <div class="default-heading">
    <!-- Crown image -->
    <img class="img-responsive" src="/img/crown.png" alt="" />
    <!-- Heading -->
    <h2><%= main_title %></h2>

    <p><%= sub_title %></p>
    <!-- Border -->
    <div class="border"></div>
  </div>

  <%= form_for @recipe_type, :html => {class: 'form-inline'} do |f| %>

  <div class="form-group">
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <%= f.submit "Enviar", class: 'btn btn-success' %>

  <% end %>
</div>