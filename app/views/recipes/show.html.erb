<div class="container">
	<div class="row">
		<%= render partial: "/partials/type_and_cuisine" %>
		<div class="col-md-5">
			<%= image_tag '/images/star.png', class: "img-responsive" if @recipe.featured? %><h1><%= @recipe.title %></h1>

			<p>Enviado por: <%= @recipe.user.email %></p>

			<h3>Detalhes</h3>

			<p>Tipo: <%= @recipe.recipe_type.name %></p>

			<p>Cozinha: <%= @recipe.cuisine.name %></p>

			<p>Dificuldade: <%= @recipe.difficulty %></p>

			<p>Tempo de preparo: <%= @recipe.cook_time %> minutos</p>
		</div>
		<div class="col-md-5">
			<%= image_tag @recipe.photo.url, class: "img-responsive" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-5">			
			<h3>Ingredientes</h3>

			<p><%= @recipe.ingredients %></p>

			<i class="fa fa-star fa-3x" aria-hidden="true"></i><%= link_to "Salvar como favorita", favorite_recipe_path(@recipe), method: :post  %>

			<i class="fa fa-envelope fa-3x" aria-hidden="true"></i><a href="#">Enviar por Email</a>
		</div>
		<div class="col-md-5">
			<h3>Como Preparar</h3>

			<p><%= @recipe.method %></p>
		</div>
	</div>
		
	<div>
		<h3>Enviar para um amigo</h3>
		<%= form_tag(share_recipe_path, method: :post) do  %>
			<%= label_tag :email, 'Email' %>
			<%= text_field_tag :email %>
			<%= label_tag :message, 'Mensagem' %>
			<%= text_area_tag :message %>
			<%= submit_tag 'Enviar' %>
		<% end %>		
	</div>
	<%= link_to "Voltar", root_path, class: "btn btn-primary" %>

	<% if current_user == @recipe.user %>
		<%= link_to "Editar", edit_recipe_path(@recipe), class: "btn btn-info" %>
	<% end %>

	<%= link_to "Remover", @recipe, method: :delete, class: "btn btn-danger", data: { confirm: "Tem certeza que deseja remover #{@recipe.title}?" } %>
</div>
