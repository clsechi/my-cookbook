<div class="container">
	<div class="row">
		<%= render partial: "/partials/type_and_cuisine" %>
		<div class="col-md-5">
			<h1><%= @recipe.title %></h1>

			<p>Enviado por: </p>

			<h3>Detalhes</h3>

			<p>Tipo: <%= @recipe.recipe_type.name %></p>

			<p>Cozinha: <%= @recipe.cuisine.name %></p>

			<p>Dificuldade: <%= @recipe.difficulty %></p>

			<p>Tempo de preparo: <%= @recipe.cook_time %> minutos</p>
		</div>
		<div class="col-md-5">
			<img src="/pizza.jpg" class="img-responsive">
		</div>
	</div>
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-5">			
			<h3>Ingredientes</h3>

			<p><%= @recipe.ingredients %></p>

			<i class="fa fa-star fa-3x" aria-hidden="true"></i><a href="#">Salvar como Favorita</a>

			<i class="fa fa-envelope fa-3x" aria-hidden="true"></i><a href="#">Enviar por Email</a>
		</div>
		<div class="col-md-5">
			<h3>Como Preparar</h3>

			<p><%= @recipe.method %></p>
		</div>
	</div>
	<%= link_to "Voltar", root_path %>

	<%= link_to "Editar", edit_recipe_path(@recipe) %>
</div>


