<!DOCTYPE html>
<html>
<head>
  <title>MyCookbook</title>
  <%= csrf_meta_tags %>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

  <%= stylesheet_link_tag "/css/prettyPhoto.css" %>

  <%= stylesheet_link_tag "/css/less-style.css" %>

  <%= stylesheet_link_tag "/css/style.css" %>

</head>

<body>

  <div class="wrapper">    
    <!-- Header Start -->
    <div class="header">
      <div class="container">
        <!-- Header top area content -->
        <div class="header-top">
          <div class="row">
            <%= render partial: "/partials/search_form" %>
            <div class="login">
              <div class="col-md-5 col-sm-3">
              <% if user_signed_in? %>
              <p class="text-center"><strong>Bem-vindo <%=
              link_to current_user.email, edit_user_path(current_user)%></strong></p>
            </div>
            <div class="col-md-1 col-sm-2">            
              <%= button_to "Sair", destroy_user_session_path, :method => :delete, class: "btn btn-danger pull-right" %>
              <% else %>
              <%= button_to "Entrar", new_user_session_path, class: "btn btn-success pull-right " %>
            <% end %>
            </div>
            </div>            
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 col-sm-5">
            <!-- Link -->
            <a href="/">
              <!-- Logo area -->
              <div class="logo">
                <img class="img-responsive" src="/img/logo.png" alt="" />
                <!-- Heading -->
                <h1>CookBook</h1>
                <!-- Paragraph -->
                <p>Bem-vindo ao maior livro de receitas online</p>
              </div>
            </a>
          </div>
          <div class="col-md-8 col-sm-7">
            <!-- Navigation -->
            <nav class="navbar navbar-default navbar-right" role="navigation">
              <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                  <ul class="nav navbar-nav text-center">
                    <li><i class="fa fa-home fa-3x"></i><a href="/">Home</a></li>
                    <% if user_signed_in? %>
                    <li><i class="fa fa-bookmark fa-3x"></i><%= link_to 'Minhas Receitas', user_recipes_path(current_user) %></li>
                    <% end %>
                    <li><i class="fa fa-user fa-3x"></i><%= link_to 'Usuários', users_path %></li>
                    <li><i class="fa fa-paper-plane fa-3x"></i><%= link_to "Enviar uma receita", new_recipe_path %></li>
                    <li><i class="fa fa-leaf fa-3x"></i><a href="/about">Sobre Nós</a></li>
                  </ul>
                </div><!-- /.navbar-collapse -->
              </div><!-- /.container-fluid -->
            </nav>
          </div>
        </div>
      </div> <!-- / .container -->
    </div>

    <% if flash[:notice] %>
    <div class="alert alert-success notice">
      <%= flash[:notice] %>
    </div>
    <% end %>

    <% if flash[:alert] %>
    <div class="alert alert-danger alert">
      <%= flash[:alert] %>
    </div>
    <% end %> 

    <%= yield %>

    <!-- Footer Start -->
    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-md-12 col-sm-12 text-center">
            <!-- Paragraph -->
            <p>&copy; Copyright 2018 <a href="/">CookBook</a></p>

            <!-- Social media icon -->
            <div class="footer-widget">
              <div class="social">
                <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Footer End -->

  </div>
</body>
</html>
