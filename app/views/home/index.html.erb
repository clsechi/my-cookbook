<div class="container">
	<div class="row">
		<div class="col-sm-12 col-md-12">
			<h2 class="text-center">Bem-vindo ao maior livro de receitas online</h2>
		</div>
		<%= render partial: "/partials/type_and_cuisine" %>		
		<div class="col-sm-12 col-md-5 recipes">
			<h2>Últimas Receitas</h2>
			<div class="row">
				<% @recipes.each do |recipe| %>
				<div class="col-sm-5 col-md-5">
					<%= image_tag recipe.photo.url(:medium), class: "img-responsive" %>
				</div>
				<div class="col-sm-7 col-md-7">
					<span><%= image_tag '/images/star.png', class: "img-responsive"  %><%= link_to recipe.title, recipe_path(recipe.id) %></span>
					<ul>
						<li>Tipo: <%= recipe.recipe_type.name%></li>
						<li>Cozinha: <%= recipe.cuisine.name%></li>
						<li>Dificuldade: <%= recipe.difficulty %></li>
						<li>Preparo: <%= recipe.cook_time %> minutos</li>
					</ul>
				</div>
				<% end %>
				<%= link_to 'Todas as Receitas', recipes_path %>
			</div>		
		</div>
		<div class="col-sm-12 col-md-5 favorites">
			<h2>Favoritas dos Usuários</h2>
			<div class="row">
				<% @most_favorites.each do |recipe| %>
				<div class="col-sm-5 col-md-5">
					<%= image_tag recipe.photo.url(:medium), class: "img-responsive" %>
				</div>
				<div class="col-sm-7 col-md-7">
					<span><%= link_to recipe.title, recipe_path(recipe.id) %></span>
					<ul>
						<li>Tipo: <%= recipe.recipe_type.name%></li>
						<li>Cozinha: <%= recipe.cuisine.name%></li>
						<li>Dificuldade: <%= recipe.difficulty %></li>
						<li>Preparo: <%= recipe.cook_time %> minutos</li>
					</ul>
				</div>
				<% end %>
			</div>
		</div>		
	</div>
</div>